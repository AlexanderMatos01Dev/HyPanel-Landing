            <button
              class="p-3 rounded-xl bg-[#151D2C]/50 border border-[#2A3B4C] text-[#8B9BB4] hover:text-[#EDA333] hover:border-[#EDA333]/50 transition-all group"
              title="Copy Link"
            >
              <LinkIcon
                size={20}
                className="group-hover:scale-110 transition-transform"
              />
            </button>
          </div>
        </div>

        <!-- Center Content -->
        <div class="lg:col-span-8">
          <!-- Featured Image -->
          <div
            class="relative w-full aspect-video rounded-3xl overflow-hidden mb-12 shadow-2xl shadow-black/50 border border-[#2A3B4C]"
          >
            <div
              class={`absolute inset-0 bg-gradient-to-br ${post.data.gradient} opacity-80`}
            >
              <div
                class="absolute inset-0 opacity-30 bg-[url('https://grainy-gradients.vercel.app/noise.svg')]"
              >
              </div>
            </div>
            <div class="absolute inset-0 flex items-center justify-center">
              <svg
                class="w-32 h-32 text-white/20"
                viewBox="0 0 24 24"
                fill="currentColor"
              >
                <path
                  d="M21 16V4H3v12h18M21 2H3c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h18c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm-10.5 9l-3-4h6l-3 4z"
                ></path>
              </svg>
            </div>
          </div>

          <!-- Article Body -->
          <article class="prose prose-invert prose-lg max-w-none">
            <Content />
          </article>

          <!-- Mobile Share (Visible only on mobile) -->
          <div class="lg:hidden mt-12 pt-8 border-t border-[#2A3B4C]">
            <span
              class="text-sm font-bold text-[#8B9BB4] uppercase tracking-wider mb-4 block"
              >Share this article</span
            >
            <div class="flex gap-4">
              <button
                class="p-3 rounded-xl bg-[#151D2C]/50 border border-[#2A3B4C] text-[#8B9BB4] hover:text-white"
                title="Share on Twitter"
              >
                <svg
                  width="18"
                  height="18"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path
                    d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                  ></path>
                </svg></button
              >
              <button
                class="p-3 rounded-xl bg-[#151D2C]/50 border border-[#2A3B4C] text-[#8B9BB4] hover:text-white"
                title="Share on Facebook"
                ><Facebook size={20} /></button
              >
              <button
                class="p-3 rounded-xl bg-[#151D2C]/50 border border-[#2A3B4C] text-[#8B9BB4] hover:text-white"
                title="Share on Discord"
              >
                <svg
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
